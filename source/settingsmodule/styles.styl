settings-off-size = 35px
/*==========================================================
Settings Content
==========================================================*/
#settings
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 20px 0
    box-sizing: border-box
    overflow: hidden
    transition: opacity 0.3s
    opacity: 0
    overflow-y auto
    z-index: -1
    background-color cd-darkblue

#settingsoff
    position: absolute
    top 5px
    // right 10px
    right 5px
    width settings-off-size
    height settings-off-size
    transition transform 0.3s
    // transform: translateX(102%)
    // background-color: cd-verydark
    color cd-background
    z-index 5
    svg
        width: settings-off-size
        height settings-off-size

.settings-entry
    
    padding: 15px 20px
    font-size: 15pt
    text-align: left
    line-height: 110%
    display: block
    background-color: cd-turquoise
    .text
        max-width calc(100% - 30px)
        overflow: hidden
        text-overflow: ellipsis
    .arrow
        position: absolute
        right 20px
        top 50%
        transform translateY(-50%)
        // color #666
        color white
        svg
            width 30px
            height 30px
    
.icon-entry
    .text
        max-width calc(100% - 70px)
        overflow: hidden
        text-overflow: ellipsis
        position relative
        left 40px
    .icon
        position: absolute
        left 20px
        top 50%
        transform translateY(-50%)
        color white

        svg
            width 30px
            height 30px


.grouping-head
    margin-top 30px
    padding: 15px 20px
    font-size: 13pt
    // text-align: left
    text-align right
    // text-align center
    // color #888
    color white

.grouping-head:first-child
    margin-top 5px

/*==========================================================
Settings Content - present
==========================================================*/
body.settings
    #main
        opacity 0
        z-index -1
    #settings
        opacity 1
        z-index 20

