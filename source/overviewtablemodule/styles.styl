// overviewtable styles
button-size = 22px

@import '../../../node_modules/gridjs/dist/theme/mermaid.css'

#overviewtable.no-search
    padding-top 58px
    .gridjs-search-input
        dislplay none

#overviewtable
    position relative
    width 100%

.gridjs-container
    box-sizing: border-box

.gridjs-wrapper
    background-color: white

.gridjs-pages
    display flex
    max-width: 100% 

.gridjs-pages > button
    overflow: hidden
    flex-shrink 2

.gridjs-pages > button:first-child
    flex-shrink 10
    text-overflow: ellipsis

.gridjs-pages > button:last-child
    flex-shrink 10
    text-overflow: ellipsis

.c-table
    // height calc(100vh - 180px) !important
    max-width 100% !important
    min-width calc(100% - 10px)

    
th.gridjs-th
    background-color #F9FAFB
    z-index 20

tr.gridjs-tr:nth-child(2n)
    background-color: alpha(cd-darkblue, 0.3)

