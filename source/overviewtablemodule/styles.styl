//- Tooltips

.expertise-frame
  position: relative;
  display: inline-block;

.expertise-frame .tooltip
  visibility: hidden;
  width: 180px;
  background-color: rgba(40,60,95,0.7);
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px;
  position: absolute;
  z-index: 1;
  bottom: 125%;
  left: -140px;
  opacity: 0;
  transition: opacity 0.3s;

.expertise-frame .tooltip::after
  content: "";
  position: absolute;
  top: 100%;
  left: 83%;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: rgba(40,60,95,0.7) transparent transparent transparent;

.expertise-frame:hover
    text-decoration: underline

.expertise-frame:hover .tooltip
  visibility: visible;
  opacity: 1;
  z-index: 999
