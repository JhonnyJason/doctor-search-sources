// overviewtable styles
button-size = 22px

@import '../../../node_modules/gridjs/dist/theme/mermaid.css'

#overviewtable
    position relative
    width 100%

.gridjs-container
    box-sizing: border-box

.gridjs-wrapper
    background-color: white


th.gridjs-th
    padding 7px 17px
    font-size: 12pt

.gridjs-footer
    padding 7px 17px
    // padding-left 5px
    // padding-right 5px

.gridjs-pagination
    vertical-align: middle

.gridjs-summary
    vertical-align: middle
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    font-size: 10pt
    width 200px
    margin 0 !important

.gridjs-pages
    vertical-align: middle
    display flex
    max-width: 100% 
    
.gridjs-pages > button
    overflow: hidden
    flex-shrink 2
    font-size: 9pt
    padding: 3px !important

.gridjs-pages > button:first-child
    flex-shrink 10
    text-overflow: ellipsis

.gridjs-pages > button:last-child
    flex-shrink 10
    text-overflow: ellipsis

.c-table
    // height calc(100vh - 180px) !important
    max-width 100% !important
    min-width calc(100% - 10px)

table.gridjs-table
    min-width 100%
    
th.gridjs-th
    background-color #F9FAFB
    z-index 20

tr.gridjs-tr:nth-child(2n)
    background-color: alpha(cd-darkblue, 0.3)

