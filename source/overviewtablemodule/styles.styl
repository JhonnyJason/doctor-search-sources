.befund-button:after
    content:"asd"
    opacity 0

.bild-button[disabled]
.befund-button[disabled]
    // user-select: none
    opacity 0.3
    pointer-events: none

.bild-button:active
.befund-button:active
    opacity 0.5


td.gridjs-td
    background transparent
    font-size: 12pt
    vertical-align: middle
    padding 6px 12px
    svg
        width: button-size
        height button-size

.click-button
.click-button:hover
    background-color: cd-turquoise
    color white
    padding 10px
    text-transform: uppercase    
.click-button:disabled
    color: #888
    background-color: #eee
    opacity 0.5
    cursor auto

